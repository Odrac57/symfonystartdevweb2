{% extends 'base.html.twig' %}

{% block title %}{{ article.title }}{% endblock %}

{% block body %}
<div class="container">
    <div class="row">
        <div class="col">
            <h1>{{ article.title }}</h1>
            <small>{{ article.createdAt|date('d/m/Y') }}
        </div>
    </div>
    <div class="row">
        <div class="col-12 col-md-8">
            {{ article.content }}
        </div>
    </div>
</div>
{% endblock %}
